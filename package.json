{
  "name": "emitus",
  "version": "1.0.8",
  "description": "Small ES6 Event Emitter to extend plain objects.",
  "repository": "joseluisq/emitus",
  "license": "MIT",
  "author": {
    "name": "JosÃ© Luis Quintana",
    "url": "http://git.io/joseluisq"
  },
  "keywords": [
    "emitter",
    "event",
    "handler",
    "api",
    "custom",
    "extend"
  ],
  "engines": {
    "node": ">= 4"
  },
  "main": " ./emitus.js",
  "scripts": {
    "start": "webpack-dev-server -d --content-base ./ --inline emitus.js",
    "build:lib": "babel ./src -d . --ignore 'test.js'",
    "build:umd": "webpack src/emitus.js dist/emitus.js",
    "build:min": "webpack -p src/emitus.js dist/emitus.min.js",
    "build": "node ./scripts/build.js",
    "prepublish": "node ./scripts/build.js",
    "release": "node ./scripts/release.js",
    "lint": "eslint src",
    "test": "npm run lint && jest"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^17.0.2",
    "babel-loader": "^6.2.8",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-transform-object-assign": "^6.8.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-stage-1": "^6.16.0",
    "eslint": "^3.11.1",
    "gzip-size": "^3.0.0",
    "in-publish": "^2.0.0",
    "jest-cli": "^17.0.3",
    "pretty-bytes": "^4.0.2",
    "readline-sync": "^1.4.5",
    "webpack": "^1.13.3",
    "webpack-dev-server": "^1.16.2"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-1"
    ],
    "plugins": [
      "dev-expression",
      "transform-object-assign"
    ]
  },
  "jest": {
    "verbose": true,
    "testPathDirs": [
      "src"
    ],
    "testRegex": "test.(js|jsx|spec)$"
  }
}

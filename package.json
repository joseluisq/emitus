{
  "name": "emitus",
  "version": "1.1.4",
  "description": "Small ES6 Event Emitter to extend plain objects.",
  "repository": "joseluisq/emitus",
  "license": "MIT",
  "author": {
    "name": "JosÃ© Luis Quintana",
    "url": "http://git.io/joseluisq"
  },
  "keywords": [
    "emitter",
    "event",
    "handler",
    "api",
    "custom",
    "extend"
  ],
  "engines": {
    "node": ">= 4"
  },
  "main": "./emitus.js",
  "scripts": {
    "start": "webpack-dev-server -d --content-base ./ --inline emitus.js",
    "build": "node ./build.js",
    "build:lib": "babel ./src -d .",
    "build:umd": "webpack src/emitus.js dist/emitus.js",
    "build:min": "webpack -p src/emitus.js dist/emitus.min.js",
    "preversion": "npm run build",
    "lint": "eslint src",
    "test": "npm run lint && jest --coverage",
    "coverage": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-dev-expression": "^0.2.1",
    "babel-plugin-transform-object-assign": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-1": "^6.22.0",
    "coveralls": "^2.11.15",
    "eslint": "^3.15.0",
    "eslint-config-standard": "^8.0.0-beta.0",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-standard": "^2.0.1",
    "gzip-size": "^3.0.0",
    "in-publish": "^2.0.0",
    "jest-cli": "^19.0.0",
    "pretty-bytes": "^4.0.2",
    "readline-sync": "^1.4.6",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.3.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-1"
    ],
    "plugins": [
      "dev-expression",
      "transform-object-assign"
    ]
  },
  "jest": {
    "verbose": true,
    "testPathIgnorePatterns": [
      "/(node_modules|scripts|dist)/"
    ]
  }
}

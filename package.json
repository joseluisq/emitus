{
  "name": "emitus",
  "version": "2.0.1",
  "description": "Small ES6 Event Emitter that can extend your plain objects.",
  "repository": "joseluisq/emitus",
  "license": "MIT",
  "author": {
    "name": "JosÃ© Luis Quintana",
    "url": "http://git.io/joseluisq"
  },
  "keywords": [
    "emitter",
    "event",
    "handler",
    "api",
    "custom",
    "extend"
  ],
  "engines": {
    "node": ">= 4"
  },
  "main": "dist/index.js",
  "scripts": {
    "version": "npm run build",
    "build": "npm run js:compressed && npm run js:uncompressed",
    "js:compressed": "cross-env NODE_ENV=compressed rollup -c",
    "js:uncompressed": "cross-env NODE_ENV=uncompressed rollup -c",
    "test": "npm run lint && cross-env BABEL_ENV=test nyc npm run test:tape",
    "lint": "eslint src test",
    "test:tape": "tape -r babel-register test.js",
    "coverage": "coveralls < ./coverage/lcov.info"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "coveralls": "^2.13.0",
    "cross-env": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "nyc": "^10.2.0",
    "rollup": "^0.41.6",
    "rollup-plugin-buble": "^0.15.0",
    "rollup-plugin-uglify": "^1.0.1",
    "tape": "^4.6.3"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ],
    "env": {
      "test": {
        "plugins": [
          "istanbul"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": "standard"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "nyc": {
    "include": [
      "index.js"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": false,
    "instrument": false,
    "checkCoverage": true,
    "reporter": [
      "text",
      "lcov"
    ]
  }
}
